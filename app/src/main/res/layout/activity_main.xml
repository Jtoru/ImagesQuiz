<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        android:background="@android:color/black"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="320dp"
            android:layout_height="180dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView" android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="Button"
            android:tag="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="Button"
            android:tag="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button2" android:layout_marginStart="40dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/button"/>
    <Button
            android:text="Button"
            android:tag="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            android:layout_marginBottom="12dp" app:layout_constraintBottom_toTopOf="@+id/button2"/>
    <Button
            android:text="Button"
            android:tag="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button4" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            android:layout_marginBottom="12dp" app:layout_constraintBottom_toTopOf="@+id/button3"/>
</android.support.constraint.ConstraintLayout>